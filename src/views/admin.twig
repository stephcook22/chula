{% extends "base.twig" %}
{% block title %}Admin{% endblock %}
{% block content %}
{%  include "nav.twig" %}
<div id="theContent">
    <h2>Your Pages</h2>
    {% if pages %}
        <table class="table table-striped">
		{% for page in pages %}
			<tr>
                <td>{{ page }}</td>
                <td><a href="{{url('admin_delete',{page: page})}}">Delete</a></td>
			    <td><a href="{{url('admin_edit',{page: page})}}">Edit</a></td>
            </tr>
		{% endfor %}
	</table>
    {% else %}
        No pages have been published yet, either publish one of the drafts below or <a href="{{ url('admin_new') }}">create
        a new page</a>
    {% endif %}

    <h2>Drafts</h2>
    {% if drafts %}
        <table class="table table-striped">
            {% for draft in drafts %}
                <tr>
                    <td>{{ draft }}</td>
                    <td><a href="{{ url('admin_delete',{page: draft}) }}">Delete</a></td>
                    <td><a href="{{ url('admin_edit',{page: draft}) }}">Edit</a></td>
                    <td><a href="{{ url('admin_publish',{draft: draft}) }}">Publish</a></td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        No drafts found, why not <a href="{{ url('admin_new') }}">add</a> one?
    {% endif %}
</div>
{% endblock %}